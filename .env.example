# ===================================
# Database Configuration
# ===================================
# PostgreSQL設定 (既存のRailsプロジェクトと同じ値を使用)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=pictyping_development

# Connection strings
DB_CONNECTION_STRING=Host=db;Database=pictyping_development;Username=postgres;Password=your_postgres_password

# ===================================
# Redis Configuration
# ===================================
REDIS_PASSWORD=
REDIS_CONNECTION_STRING=redis:6379

# ===================================
# JWT Configuration
# ===================================
# JWT設定 (最低32文字以上の安全な文字列を使用)
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long_and_very_secure
JWT_ISSUER=PictypingAPI
JWT_AUDIENCE=PictypingWebApp
JWT_EXPIRY_MINUTES=60

# ===================================
# Google OAuth Configuration
# ===================================
# Google Cloud Console で取得したクライアントID/シークレット
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===================================
# Domain Configuration
# ===================================
# ドメイン設定 (開発環境はlocalhost、本番環境は実際のドメインを使用)
OLD_DOMAIN=https://pictyping.com
NEW_DOMAIN=https://new.pictyping.com

# ===================================
# API Configuration
# ===================================
# フロントエンドが使用するAPI URL
# nginx経由でアクセスする場合は空文字列または相対パスを設定
# 開発環境: 空文字列を設定 (nginxプロキシ経由)
# 本番環境: 空文字列を設定 (nginxプロキシ経由)
VITE_API_URL=

# ===================================
# Environment-specific settings
# ===================================
# 本番環境では以下の値を適切に設定してください:
# - POSTGRES_PASSWORD: 強力なパスワード
# - REDIS_PASSWORD: 強力なパスワード (本番環境では必須)
# - JWT_SECRET_KEY: 本番環境専用の安全な文字列
# - GOOGLE_CLIENT_ID/SECRET: 本番環境用の OAuth 設定
# - OLD_DOMAIN/NEW_DOMAIN: 実際の本番ドメイン
# - VITE_API_URL: 本番APIのURL (例: https://api.pictyping.com)