# Sandbox environment configuration
environment    = "sandbox"
linode_region  = "ap-northeast"  # Tokyo
linode_type    = "g6-nanode-1"   # $5/month

# Application settings
aspnetcore_environment = "Development"
branch                 = "develop"

# Volumes
volume_size = 10  # GB

